<div class="header">
  <div class="container_12">
    <div class="grid_8">
      <h3 class="title"><%= link_to 'Megashop', root_path %></h3>
    </div>
    <div class="grid_4">
      <%= form_tag('/products', method: :get) do %>
          <%= text_field_tag :search %>
          <!--Два поля — цена "от" и "до", с заполненными по умолчанию 0 и максимальной стоимостью товара соответственно.-->
          <%= submit_tag 'Найти!' %>
      <% end %>
    </div>
  </div>
</div>